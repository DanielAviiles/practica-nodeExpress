<!-- Modal -->
<div class="modal fade" id="realizarPedido" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header bg-info">
        <h5 class="modal-title text-white" id="staticBackdropLabel">Realizando pedido</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="listadepedidos" method="POST">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Producto: </label>
            <select class="form-control" name="productoPedido" required>
              <option selected>Selecciona el producto deseado...</option>
              {{#each productos}}
                <option value="{{id}}" >{{nombre}}</option>
              {{/each}}
            </select>
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Usuario:</label>
            <select class="form-control" name="usuarioPedido" required>
              <option selected>Selecciona el usuario quien realiza el pedido...</option>
              {{#each usuarios}}
                <option value="{{id}}" >{{nombre}}</option>
              {{/each}}
            </select>
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Cantidad:</label>
            <input type="number" class="form-control" name="cantidadPedido" min="1" required>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            <button type="submit" class="btn btn-success">Realizar pedido</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>